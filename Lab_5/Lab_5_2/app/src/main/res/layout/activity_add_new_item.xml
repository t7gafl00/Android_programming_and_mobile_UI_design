<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddNewItemActivity">

    <TextView
        android:id="@+id/add_item_name_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <EditText
        android:id="@+id/add_item_name_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your assignment name here" />

    <TextView
        android:id="@+id/add_item_description_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description" />

    <EditText
        android:id="@+id/add_item_description_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your assignment description here" />

    <TextView
        android:id="@+id/add_item_date_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due date" />

    <EditText
        android:id="@+id/add_item_date_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your assignment due date here" />

    <CalendarView
        android:id="@+id/add_item_date_CalendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></CalendarView>

</LinearLayout>